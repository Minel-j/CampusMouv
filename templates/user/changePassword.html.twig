{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block main %}
    <div class="uk-width-1-2@m uk-margin-auto uk-margin-top">
        <div>
            <h1 class="uk-heading-divider uk-text-center">Modifier mon mot de passe</h1>

            {# Flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div>{{ message }}</div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, { attr: { class: 'uk-form-stacked' } }) }}
            {{ form_errors(form) }}

            {{ form_row(form.currentPassword) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}

            <div class="uk-margin uk-text-center">
                <button class="uk-button uk-button-primary uk-width-1-1" type="submit">Mettre Ã  jour</button>
            </div>

            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}